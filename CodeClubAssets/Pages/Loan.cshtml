@page
@model CodeClubAssets.Pages.LoanModel
@{
    ViewData["Title"] = "Loan";
}

<h1>Item Loan</h1>
<hr />  
        
<form method="post">
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Item
            </dt>
            <dd class="col-sm-10">
                <select asp-for="Loan.AssetID">
                    @foreach(var item in Model.Item)
                    {
                        if (item.Out)
                        {
                            <option disabled>@item.ID - @item.Name</option>
                        }
                        else
                        {
                            <option value="@item.ID">@item.ID - @item.Name</option>
                        }
                    }
                </select>
            </dd>
            <dt class="col-sm-2">
                Member
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Loan.MemberID" />
                </dd>
                <dt class="col-sm-2">
                    Length of Loan (weeks)
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="Loan.LengthBorrowed" type="number" min="1" max="13" />
                </dd>
        </dl>
    </div>
    <input type="submit" value="Loan" class="btn btn-success">
</form>
