@page
@model CodeClubAssets.Pages.Management.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Location)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Item.Out)
            {
                    <span>@Model.Item.Location (out)</span>
            }
            else
            {
                    <span>@Model.Item.Location</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.SerialNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ParentID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ParentID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Tags)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Tags)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Item?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
